    Profile, Forum, Events, Developers, NIT Silchar" />

  <link rel="stylesheet" href="/css/register/register.css" />
  <link rel="shortcut icon" type="image/x-icon" href="/img/logo/dsc_trans_logo.png" />
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" />
  <link rel="stylesheet" href="/css/index/footer.css" />
  <link rel="stylesheet" type="text/css" href="/css/index/navbar.css" />
  <link rel="stylesheet" href="/css/index/flashMessage.css">

  <title>DSC NITS | Login/SignUp</title>
</head>

<body>
  <!--Navbar Starts-->
  <%-include('partials/navbar')%>
  <!---Navbar Ends-->

  <!-- Flash Message Body Start -->
  <%-include('partials/flashMessage')%>
  <!-- Flash Message body end -->

  <div class="container" id="container">
    <div class="heading-block" style="width:45% !important;">
      <h1 id="label">
        SignUp
        <span style="color: #0f1923"></span>
      </h1>
    </div>
    <div class="signup-form" id="signupform">
      <h1 class="mobileheading">Sign Up</h1>
      <form action="/user/register" method="POST" onsubmit="return validate()" name="signupform" id="signupform">
        <label for="codename">Full name</label><input type="text" name="name" placeholder="Name" required minlength="1"
          maxlength="30" id="name" />

        <label for="hname">Username</label>

        <input id="hname" type="text" placeholder="Username" name="dscHandle" required maxlength="20"
          onchange="return checkuniquedschandle()" />
        <p id="uniqueness"></p>

        <label for="email">Email</label><input
          pattern="[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*@(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?"
          type="email" name="email" placeholder="Email Address" required />
        <label for="sidearm">Password</label>
        <div class="Password">
          <input type="password" id="password" type="password" name="password" placeholder="Password" required />
          <img id="password_img_signin1" onclick="showpasswordsignup()" src="/img/icons/hide.png" alt="Password show"/>
        </div>

        <label for="sidearm">Confirm Password</label>
        <div class="Password">
          <input type="password" id="cpassword" type="password" name="cpassword" placeholder="Retype Password" required />
          <img id="password_img_signin2" onclick="showpasswordsignup()" src="/img/icons/hide.png" alt="Password show"/>
        </div>
        <!-- <br /> -->
        <!-- <div class="flexRow" style="
              display: flex;
              align-items: center;
              height: auto;
              margin: -18px;
              padding: 0;
              padding-left: 20px;
            ">
          <input onclick="showpasswordsignup()" type="checkbox" style="width: auto; margin: 0" />&nbsp&nbsp Show
          Password
        </div> -->
        <div>
          <center>
            <div class="button-box" id="btn-1" style="border-radius: 30px;">
              <div class="button-mask button-mask-slide" style="padding: 0">
                <input type="submit" value="SignUp" id="" style="padding: 4px;"
                  onclick="ValidateEmail(document.signupform.text1)" />
              </div>
            </div>
            <br>
            <span style="font-size: 16px; ">Already have an account ?</span>
            

            <div class="button-mask button-mask-slide" id="switchtologin"
              style="cursor: pointer; display: inline-block;font-size: 16px; color: rgba(49, 131, 255, 1);padding-bottom: 0;"> Login →</div>
          </center>
        </div>




      </form>

      <!-- <p>
          <a href="/user/forgotpassword">Forget Password ?</a><br /><br />
          or use social account
        </p> -->

      <!-- <div class="social-login">
          <a href="#">
            <img src="/img/logo/fb.png" class="social_logo" alt="facebook logo" />
            Signup with facebook
          </a>
          <a href="#">
            <img src="/img/logo/Google.png" class="social_logo" alt="google logo" />
            Signup with Google
          </a>
        </div> -->
    </div>

    <div class="signup-form" id="loginform">
      <h1 class="mobileheading">Login</h1>
      <form action="/user/login" method="POST" id="login-form">
        <label for="email">Email/Username</label><input type="text" name="email" placeholder="Email/Username"
          required />
        <label for="sidearm">Password</label>
        <div class="Password" style="margin-bottom: 0;">
          <input type="password" id="loginpassword" type="password" name="password" placeholder="Password" required />
          <img id="password_img_login" onclick="showpasswordlogin()" src="/img/icons/hide.png" alt="Password show"/>
        </div>
        <br />
        <div class="flexRow" style="
              display: flex;
              align-items: center;
              height: auto;
              margin: -18px;
              margin-bottom: 0;
            ">
          <p style="margin-top: 5px">
            <a href="/user/forgotpassword" style="color: #616161; text-decoration: none;font-size: 16px; ">Forgot Password ?</a><br />
          </p>
        </div>
        <div>
          <center>
            <div class="button-box" id="btn-1" style="border-radius: 30px;">
              <div class="button-mask button-mask-slide" style="padding: 0; ">
                <input type="submit" value="Login" id="" style="padding: 4px" />
              </div>
            </div>
            <br>
            <span  style="font-size: 16px; "> Not a member ?</span>
            <div class="button-mask button-mask-slide" id="switchtosignup"
              style="display: inline-block; cursor: pointer; font-size: 16px; color: rgba(49, 131, 255, 1);padding-bottom: 0;">SignUp →
            </div>
          </center>


        </div>
      </form>

      <!-- <div class="social-login">
          <a href="#">
            <img src="/img/logo/fb.png" class="social_logo" alt="facebook logo" />
            Login with facebook
          </a>
          <a href="#">
            <img src="/img/logo/Google.png" class="social_logo" alt="google logo" />
            Login with Google
          </a>
        </div> -->
    </div>
  </div>
  <%-include('partials/footer')%>
</body>
